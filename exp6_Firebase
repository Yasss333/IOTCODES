#include <ESP8266WiFi.h>
#include <WiFiClientSecure.h>
#include <ESP8266HTTPClient.h>
#include <DHT.h>

// ===== USER CONFIG =====
const char* WIFI_SSID = "Yash";         // your Wi-Fi SSID
const char* WIFI_PASSWORD = "12345678"; // your Wi-Fi password

// Firebase Realtime Database URL (no trailing slash)
const char* FIREBASE_DATABASE_URL = "https://exp7iot-default-rtdb.firebaseio.com";

// Leave blank if your DB rules are public
const char* FIREBASE_AUTH = ""; 
// ========================

// DHT sensor setup
#define DHTPIN D4
#define DHTTYPE DHT11
DHT dht(DHTPIN, DHTTYPE);

WiFiClientSecure client;
HTTPClient http;

void connectWiFi() {
  WiFi.mode(WIFI_STA);
  WiFi.begin(WIFI_SSID, WIFI_PASSWORD);
  Serial.print("Connecting to Wi-Fi");
  unsigned long startAttempt = millis();

  while (WiFi.status() != WL_CONNECTED && millis() - startAttempt < 20000) {
    Serial.print(".");
    delay(500);
  }

  if (WiFi.status() == WL_CONNECTED) {
    Serial.println("\n‚úÖ Wi-Fi connected!");
    Serial.print("IP address: ");
    Serial.println(WiFi.localIP());
  } else {
    Serial.println("\n‚ùå Wi-Fi failed. Restarting...");
    delay(2000);
    ESP.restart();
  }
}

void setup() {
  Serial.begin(115200);
  delay(2000);
  Serial.println("\n=== NodeMCU DHT11 Firebase Logger ===");
  dht.begin();
  connectWiFi();

  // Disable certificate validation (OK for lab use)
  client.setInsecure();
}

const unsigned long INTERVAL = 5000;
unsigned long lastSend = 0;

void loop() {
  if (WiFi.status() != WL_CONNECTED) {
    Serial.println("Wi-Fi lost. Reconnecting...");
    connectWiFi();
  }

  if (millis() - lastSend < INTERVAL) return;
  lastSend = millis();

  float temp = dht.readTemperature();
  float hum = dht.readHumidity();

  if (isnan(temp) || isnan(hum)) {
    Serial.println("‚ö†Ô∏è  Failed to read from DHT sensor");
    return;
  }

  // Build JSON payload
  String payload = "{";
  payload += "\"temperature\": " + String(temp, 2) + ",";
  payload += "\"humidity\": " + String(hum, 2) + ",";
  payload += "\"timestamp\": " + String(millis());
  payload += "}";

  String url = String(FIREBASE_DATABASE_URL) + "/DHT11.json";
  if (strlen(FIREBASE_AUTH) > 0) {
    url += "?auth=";
    url += FIREBASE_AUTH;
  }

  Serial.println("\n--------------------------------------");
  Serial.print("Sending data to: ");
  Serial.println(url);
  Serial.print("Payload: ");
  Serial.println(payload);

  http.begin(client, url);
  http.addHeader("Content-Type", "application/json");
  int code = http.PUT(payload);

  if (code > 0) {
    Serial.printf("‚úÖ HTTP %d\nResponse: %s\n", code, http.getString().c_str());
  } else {
    Serial.printf("‚ùå HTTP Error: %s\n", http.errorToString(code).c_str());
  }

  http.end();
}

















