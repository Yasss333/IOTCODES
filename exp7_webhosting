#include <ESP8266WiFi.h>
#include <ESP8266WebServer.h>
#include <DHT.h>
#include <Adafruit_Sensor.h>

// ===== Wi-Fi Credentials =====
const char* ssid = "Yash";         // ğŸ”¹ Your Wi-Fi name
const char* password = "12345678"; // ğŸ”¹ Your Wi-Fi password

// ===== DHT Sensor Settings =====
#define DHTPIN D4         // Pin connected to DHT11 data pin
#define DHTTYPE DHT11     // DHT 11 Sensor
DHT dht(DHTPIN, DHTTYPE);

// ===== Web Server Object =====
ESP8266WebServer server(80);

// ===== Function Prototypes =====
void handleRoot();
void printToSerial();

void setup() {
  Serial.begin(115200);
  Serial.println("\nInitializing DHT sensor...");
  dht.begin();

  // ===== Connect to Wi-Fi =====
  Serial.print("Connecting to ");
  Serial.println(ssid);
  WiFi.begin(ssid, password);

  int retries = 0;
  while (WiFi.status() != WL_CONNECTED && retries < 30) {
    delay(500);
    Serial.print(".");
    retries++;
  }

  if (WiFi.status() == WL_CONNECTED) {
    Serial.println("\nâœ… Wi-Fi connected!");
    Serial.print("NodeMCU IP Address: ");
    Serial.println(WiFi.localIP());
  } else {
    Serial.println("\nâŒ Failed to connect to Wi-Fi!");
    Serial.println("Please check SSID or password and reset the board.");
  }

  // ===== Setup Web Server route =====
  server.on("/", handleRoot);
  server.begin();
  Serial.println("ğŸŒ HTTP server started!");
}

void loop() {
  server.handleClient();  // Handle web requests
  static unsigned long lastPrint = 0;
  if (millis() - lastPrint > 5000) {   // Print every 5 seconds
    printToSerial();
    lastPrint = millis();
  }
}

void handleRoot() {
  float temperature = dht.readTemperature();
  float humidity = dht.readHumidity();

  // Handle invalid readings
  if (isnan(temperature) || isnan(humidity)) {
    server.send(200, "text/html", "<html><body><h1>Error Reading Sensor Data!</h1></body></html>");
    return;
  }

  // ===== Create a simple HTML dashboard =====
  String html = "<html><head><meta http-equiv='refresh' content='5'>";
  html += "<style>body{font-family:Arial;background:#f3f4f6;text-align:center;margin-top:50px;}";
  html += "h1{color:#333;}p{font-size:20px;color:#555;}</style></head><body>";
  html += "<h1>ğŸŒ¡ ESP8266 Sensor Dashboard</h1>";
  html += "<p><b>Temperature:</b> " + String(temperature) + " &deg;C</p>";
  html += "<p><b>Humidity:</b> " + String(humidity) + " %</p>";
  html += "<p><i>Page refreshes every 5 seconds.</i></p>";
  html += "</body></html>";

  server.send(200, "text/html", html);
}

void printToSerial() {
  float temperature = dht.readTemperature();
  float humidity = dht.readHumidity();

  if (isnan(temperature) || isnan(humidity)) {
    Serial.println("âš ï¸ Sensor error! Unable to read data.");
    return;
  }

  Serial.println("===== DHT11 Sensor Data =====");
  Serial.print("ğŸŒ¡ Temperature: ");
  Serial.print(temperature);
  Serial.println(" Â°C");
  Serial.print("ğŸ’§ Humidity: ");
  Serial.print(humidity);
  Serial.println(" %");
  Serial.println("=============================");
}
